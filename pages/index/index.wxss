/* pages/index/index.wxss */

.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}

.navContainer {
    display: flex;
}

.navItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}

.navItem text {
    font-size: 26rpx;
}

.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background: #6dd3ff;
    font-size: 50rpx;
    color: #fff;
    margin: 20rpx 0;
}

.recommendContainer {
    padding: 20rpx;
}

.recommendScroll {
    display: flex;
    height: 280rpx;
}

.scrollItem {
    width: 200rpx;
    margin-right: 20rpx;
}

.scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.scrollItem text {
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.topList {
    padding: 20rpx;
}

.topListSwiper {
    height: 670rpx;
}

.swiperItem {
    height: 670rpx;
    width: 97%;
    background: #eaf5f7;
}

.swiperItem .title {
    font-size: 30rpx;
    line-height: 80rpx;
}

.musicItem {
    display: flex;
    margin-bottom: 20rpx;
}

.musicItem image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 6rpx;
    margin-left: 10px;
}

.musicItem .count {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.musicItem .musicName {
    height: 100rpx;
    line-height: 100rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.scrollLrc {
  position: absolute;
  bottom: 280rpx;
  width: 640rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
}